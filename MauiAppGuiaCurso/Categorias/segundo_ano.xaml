<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppGuiaCurso.Categorias.Segundo_ano"
             Title="Segundo_ano">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="grid" TargetType="Grid">
                <Setter Property="Margin" Value="70"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="80, 80"
                  ColumnDefinitions="400"
                  Padding="5" 
                  RowSpacing="10"
                  ColumnSpacing="10"
                  Style="{StaticResource grid}">
                <Button Grid.Column="0" Grid.Row="0" x:Name="btnMobile1" Text="Programação de Aplicativos Mobile 1" Clicked="btnMobile1_Clicked"/>
                <Button Grid.Column="1" Grid.Row="0" x:Name="btnBanco2" Text="Banco de Dados 2" Clicked="btnBanco2_Clicked" />
                <Button Grid.Column="0" Grid.Row="1" x:Name="btnDs" Text="Desenvolvimento de Sistemas" Clicked="btnDs_Clicked" />
                <Button Grid.Column="1" Grid.Row="1" x:Name="btnProgramacaoweb2" Text="Programação Web 2" Clicked="btnProgramacaoweb2_Clicked" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>